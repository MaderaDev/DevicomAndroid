<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/bandeau"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/back" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="20dp"
                            android:text="Menu principal"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:text="Edition d'un devis"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ic_launcher" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/greybackground"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/iddevis"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="30dp"
                        android:hint="Devis : Nouveau"
                        android:paddingLeft="5dp"
                        android:textColor="#000000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.08"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.65"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text5"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:gravity="center_vertical"
                                android:text="Addresse"
                                android:textColor="#000000"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/address"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:background="#f3f3f3"
                                android:hint="Exemple : Grenoble 38100, 3 rue Jallon"
                                android:imeOptions="actionDone"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />

                            <TextView
                                android:id="@+id/text1"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:gravity="center_vertical"
                                android:text="Date de création"
                                android:textColor="#000000"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/datec"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginTop="0dp"
                                android:background="#f3f3f3"
                                android:hint="Date de création"
                                android:paddingLeft="5dp" />

                            <TextView
                                android:id="@+id/text2"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:gravity="center_vertical"
                                android:text="Dernière date de modification"
                                android:textColor="#000000"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/dateu"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:layout_marginTop="0dp"
                                android:background="#f3f3f3"
                                android:hint="Dernière date de modification"
                                android:paddingLeft="5dp" />


                            <TextView
                                android:id="@+id/text3"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:gravity="center_vertical"
                                android:text="Client associé"
                                android:textColor="#000000"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/customer"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:background="#f3f3f3"
                                android:hint="Aucun"
                                android:imeOptions="actionDone"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />

                            <TextView
                                android:id="@+id/text4"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:gravity="center_vertical"
                                android:text="Montant estimé"
                                android:textColor="#000000"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/price"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                android:background="#f3f3f3"
                                android:hint="0€"
                                android:paddingLeft="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.94"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/gamme"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:gravity="center_vertical"
                                android:text="Gamme sélectionnée"
                                android:textColor="#000000"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.08"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.74"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/sgamme"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginRight="30dp"
                                        android:background="#f3f3f3"
                                        android:hint="Aucune"
                                        android:paddingLeft="5dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/selectgammelayout"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.36"
                                    android:orientation="vertical"
                                    android:weightSum="1">

                                    <Button
                                        android:id="@+id/selectgamme"
                                        android:layout_width="190dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:background="@color/colorPrimary"
                                        android:text="Gammes"
                                        android:textColor="#fff"
                                        android:textSize="13dp" />

                                </LinearLayout>


                            </LinearLayout>


                            <TextView
                                android:id="@+id/ligne"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:gravity="center_vertical"
                                android:text="Ligne de produit sélectionnée"
                                android:textColor="#000000"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.08"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.74"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/sprod"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginRight="30dp"
                                        android:background="#f3f3f3"
                                        android:hint="Aucune"
                                        android:paddingLeft="5dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.36"
                                    android:orientation="vertical"
                                    android:weightSum="1">

                                    <Button
                                        android:id="@+id/selectprod"
                                        android:layout_width="190dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:background="@color/colorPrimary"
                                        android:text="Lignes de produit"
                                        android:textColor="#fff"
                                        android:textSize="13dp" />

                                </LinearLayout>


                            </LinearLayout>


                            <TextView
                                android:id="@+id/ref"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="30dp"
                                android:gravity="center_vertical"
                                android:text="Référence sélectionnée"
                                android:textColor="#000000"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.08"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.74"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/sref"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginRight="30dp"
                                        android:background="#f3f3f3"
                                        android:hint="Aucune"
                                        android:paddingLeft="5dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.36"
                                    android:orientation="vertical"
                                    android:weightSum="1">

                                    <Button
                                        android:id="@+id/selectref"
                                        android:layout_width="190dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:background="@color/colorPrimary"
                                        android:text="Références"
                                        android:textColor="#fff"
                                        android:textSize="13dp" />

                                </LinearLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.08"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/statustext"
                                        android:layout_width="fill_parent"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginTop="30dp"
                                        android:gravity="center_vertical"
                                        android:text="Status du devis"
                                        android:textColor="#000000"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/status"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginRight="30dp"
                                        android:background="#f3f3f3"
                                        android:hint="Aucune"
                                        android:paddingLeft="5dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical"
                                    android:weightSum="1">

                                    <TextView
                                        android:id="@+id/state"
                                        android:layout_width="fill_parent"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginTop="30dp"
                                        android:gravity="center_vertical"
                                        android:text="Etape de construction"
                                        android:textColor="#000000"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/step"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginRight="30dp"
                                        android:background="#f3f3f3"
                                        android:hint="Aucune"
                                        android:paddingLeft="5dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="60dp"
                                android:layout_weight="0.08"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.37"
                                    android:orientation="vertical">

                                    <Button
                                        android:id="@+id/submit"
                                        android:layout_width="200dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginLeft="30dp"
                                        android:background="@color/colorPrimary"
                                        android:text="Enregistrer"
                                        android:textColor="#fff"
                                        android:textSize="13dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.36"
                                    android:orientation="vertical"
                                    android:weightSum="1">

                                    <Button
                                        android:id="@+id/cancel"
                                        android:layout_width="200dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginRight="30dp"
                                        android:background="@color/buttonnot"
                                        android:text="Annuler"
                                        android:textColor="#fff"
                                        android:textSize="13dp" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>